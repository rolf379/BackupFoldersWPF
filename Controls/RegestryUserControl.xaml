<UserControl x:Class="BackupFoldersWPF.Controls.RegestryUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BackupFoldersWPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="470">
    <Grid>
        <StackPanel Orientation="Horizontal" Height="80">
            <Button x:Name="RemoveRegistryKey" Click="RemoveRegistryKey_Click" Background="Transparent" Width="230" BorderThickness="0" HorizontalAlignment="Right" Margin="5 0 10 0">
                <StackPanel Orientation="Horizontal" Width="230">
                    <Image Source="/Images/registryicongreen64px.png" Height="64" />

                    <TextBlock Text="Remove From Registry" Foreground="White" FontSize="14" FontFamily="Arial" Margin="10 30 0 0"/>
                </StackPanel>
            </Button>
            <Button x:Name="AddBackupToRegistry" Click="AddBackupToRegistry_Click" Background="Transparent" Width="180" BorderThickness="0" HorizontalAlignment="Right" Margin="0 0 0 0">
                <StackPanel Orientation="Horizontal" Width="180">
                    <Image Source="/Images/registryicongreen64px.png" Height="64"/>
                    <TextBlock Text="Add To Registry" Foreground="White" FontSize="14" FontFamily="Arial" Margin="10 30 0 0"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
